                <div class="chart-container">
                  <div class="row chart-container" style="height:300px">
                      <div class="col-sm chart-container" style="position: relative;height:200px;">
                          <canvas  id="piechart_presentday" height="200" width="200" ></canvas>
                      </div>
                      <div class="col-sm chart-container" style="position: relative;">
                          <canvas id="piechart_previousday" height="200" width="200"></canvas>
                      </div>
                  </div>

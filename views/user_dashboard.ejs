    <script>
        let url="http://localhost:3000/graphinfo/piechartdata";
        async function getData() {
                var info = await fetch(url);
                info = await info.json();
                drawChart(info);
        }
        getData();
        function drawChart(data_info) {
            var count=0,count1=0;
            let present_data = data_info.today;
            let previous_data = data_info.yesterday;
            for(var i=0;i<3;i++){
                if( present_data[i]==0){
                count+=1;
                }
                if (previous_data[i]==0){
                count1+=1;
                }
            }

            const labels = [
                    "Break",
                    "Meeting",
                    "Work"
                ];
                
                const data = {
                    labels: labels,
                    datasets: [{
                    label: 'Previous_day_data',
                    backgroundColor: [
                    "rgb(255, 99, 132)",
                    "rgb(0, 0, 255)",
                    "rgb(255, 165, 0)"
                    ],
                    borderColor: 'rgb(255, 99, 132)',
                    data: present_data,
                    }]
                };
                
                const config = {
                    type: "pie",
                    data: data,
                    options: {
                    responsive:true,
                    maintainAspectRatio:true,
                    plugins: {
                        title: 
                        {
                        display:true    ,
                        text: 'Yesterday',
                        font:{
                            weight:"Bold",
                        }
                        },
                        legend: {
                        labels: {
                            // This more specific font property overrides the global property
                            font: {
                                size: 10
                            }
                        },
                    }
                }
                    }
                };
                //chart 1
                if(count!==3){
                const myChart1=document.getElementById('piechart_presentday').getContext('2d');
                const my_Chart = new Chart( myChart1,config);
                }
                //chart 2
                if(count1!==3){
                const myChart2=document.getElementById("piechart_previousday").getContext('2d');
                data.datasets.label="Present_day_data";
                data.datasets[0].data=previous_data;
                config.options.plugins.title.text="Today";
                const my_Chart2=new Chart(myChart2,config);
                }
                //chart 3
                // const myChart3=document.getElementById("barchart_week");
                // data.datasets[0].data=week_data
                // const my_Chart3=new Chart(myChart3,config);
        }
       
          
    </script>
